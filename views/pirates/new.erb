<h2>Create a Pirate:</h2>

<form method = "post" action="/pirates">
    <h2>Pirate -</h2>
        <p><label for="name"> Pirate's Name:</label></p>
        <p><input type="text" id="name" name="pirate[name]"></p>
        <p><label for="weight">Pirate's Weight:</label></p>
        <p><input type="text" id="weight" name="pirate[weight]"></p>
        <p><label for="height">Pirate's Height:</label></p>
        <p><input type="text" id="height" name="pirate[height]"></p>
    <h2>Ship 1 -</h2>
        <p><label for="ship_name_1">Ship 1 Name:</label></p>
        <p><input type="text" id="ship_name_1" name="pirate[ships][][name]"></p>
        <p><label for="ship_type_1">Ship 1 Type:</label></p>
        <p><input type="text" id="ship_type_1" name="pirate[ships][][type]"></p>
        <p><label for="ship_booty_1">Ship 1 Booty:</label></p>
        <p><input type="text" id="ship_booty_1" name="pirate[ships][][booty]"></p>
    <h2>Ship 2 -</h2>
        <p><label for="ship_name_2">Ship 2 Name:</label></p>
        <p><input type="text" id="ship_name_2" name="pirate[ships][][name]"></p>
        <p><label for="ship_type_2">Ship 2 Type:</label></p>
        <p><input type="text" id="ship_type_2" name="pirate[ships][][type]"></p>
        <p><label for="ship_booty_2">Ship 2 Booty:</label></p>
        <p><input type="text" id="ship_booty_2" name="pirate[ships][][booty]"></p>
        <p><button type="submit" id="submit">Submit</button></p>
</form>
