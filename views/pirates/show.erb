
<h1>Pirates</h1>

<div class="pirate">
  <p>Pirate Name: <%= @pirate.name %></p><br>
  <p>Pirate Weight: <%= @pirate.weight %> pounds</p><br>
  <p>Pirate Height: <%= @pirate.height %> inches</p>
</div><br>

<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Ship Name: <%= ship.name %></p><br>
    <p>Ship Type: <%= ship.type %></p><br>
    <p>Ship Booty: <%= ship.booty %></p>
  </div><br>
<% end %>



